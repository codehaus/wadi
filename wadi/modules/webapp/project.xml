<?xml version="1.0" encoding="UTF-8"?>

<!-- use war:webapp target for exploded deployment -->

<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>

  <!-- ===================== -->
  <!-- Module Identification -->
  <!-- ===================== -->

  <name>WADI :: WebApp</name>
  <id>wadi-webapp</id>

  <shortDescription>WADI demo webapp</shortDescription>
  <description>WADI demo webapp</description>

  <package>org.codehaus.wadi.webapp</package>

  <!-- ============ -->
  <!-- Dependencies -->
  <!-- ============ -->

  <dependencies>

    <!-- compile time -->

    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
      <version>2.4-rc2</version>
      <url>http://geronimo.apache.org</url>
      <javadoc>http://geronimo.apache.org/specs/servlet/apidocs</javadoc>
    </dependency>

    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jsp</artifactId>
      <version>1.0-M1</version>
      <url>http://geronimo.apache.org</url>
      <javadoc>http://geronimo.apache.org/specs/servlet/apidocs</javadoc>
      <properties>
	<war.bundle>${war.bundle.jasper.runtime}</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.6.5</version>
    </dependency>

    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>

    <dependency>
      <groupId>commons-el</groupId>
      <artifactId>commons-el</artifactId>
      <version>1.0</version>
<!--
      <properties>
	<war.bundle>${war.bundle.jasper.runtime}</war.bundle>
      </properties>
-->
    </dependency>

    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-compiler</artifactId>
      <version>5.0.28</version>
      <url>http://jakarta.apache.org/tomcat/tomcat-5.0-doc</url>
      <javadoc>http://jakarta.apache.org/tomcat/tomcat-5.0-doc/catalina/docs/api</javadoc>
    </dependency>

    <!-- run time -->

    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-runtime</artifactId>
      <version>5.0.28</version>
      <url>http://jakarta.apache.org/tomcat/tomcat-5.0-doc</url>
      <javadoc>http://jakarta.apache.org/tomcat/tomcat-5.0-doc/catalina/docs/api</javadoc>
      <properties>
	<war.bundle>${war.bundle.jasper.runtime}</war.bundle>
      </properties>
    </dependency>

  </dependencies>

  <build>

    <defaultGoal>war:war</defaultGoal>

  </build>

</project>
