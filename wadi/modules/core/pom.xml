<project>

  <parent>
    <groupId>wadi</groupId>
    <artifactId>wadi</artifactId>
    <relativePath>../../pom.xml</relativePath>
    <version>2.0M2-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wadi-core</artifactId>
  <packaging>jar</packaging>
  <name>WADI :: Core</name>
  <description>WADI Core functionality</description>

  <scm>
    <connection>scm:cvs:pserver:anoncvs@cvs.wadi.codehaus.org:/home/projects/wadi/scm:wadi/modules/core</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.wadi.codehaus.org/home/projects/wadi/scm:wadi/modules/core</developerConnection>
    <url>http://cvs.wadi.codehaus.org/viewrep/wadi/wadi/modules/core</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-j2ee-management</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jms</artifactId>
    </dependency>
    <dependency>
      <groupId>jcache</groupId>
      <artifactId>jcache</artifactId>
    </dependency>
    <dependency>
      <groupId>axion</groupId><!-- used by some tests -->
      <artifactId>axion</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-primitives</groupId><!-- needed by axion -->
      <artifactId>commons-primitives</artifactId>
    </dependency>
    <!-- run time -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-el</groupId>
      <artifactId>commons-el</artifactId>
    </dependency>
    <dependency>
      <groupId>concurrent</groupId>
      <artifactId>concurrent</artifactId>
    </dependency>
    <dependency>
      <groupId>activemq</groupId>
      <artifactId>activemq</artifactId>
    </dependency>
    <dependency>
      <groupId>backport-util-concurrent</groupId>
      <artifactId>backport-util-concurrent</artifactId>
    </dependency>
    <dependency>
      <groupId>activecluster</groupId>
      <artifactId>activecluster</artifactId>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-common</artifactId>
    </dependency>
    <dependency>
      <groupId>mx4j</groupId>
      <artifactId>mx4j</artifactId>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring</artifactId>
    </dependency>
    <dependency>
      <groupId>regexp</groupId>
      <artifactId>regexp</artifactId>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>src/test</testSourceDirectory>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
	<configuration>
	  <excludes>
	    <exclude implementation="java.lang.String">**/*$*.java</exclude><!-- stop surefire from trying to run nested classes... -->
	    <exclude implementation="java.lang.String">**/TestActiveCluster.java</exclude>
	    <exclude implementation="java.lang.String">**/TestCluster.java</exclude>
	    <exclude implementation="java.lang.String">**/TestContextualiser.java</exclude>
	    <exclude implementation="java.lang.String">**/TestDIndex.java</exclude>
	    <exclude implementation="java.lang.String">**/TestEvicters.java</exclude>
	    <exclude implementation="java.lang.String">**/TestGCache.java</exclude>
	    <exclude implementation="java.lang.String">**/TestGianni.java</exclude>
	    <exclude implementation="java.lang.String">**/TestReplication.java</exclude>
	    <exclude implementation="java.lang.String">**/io/TestMotion.java</exclude>
	    <exclude implementation="java.lang.String">**/io/TestServers.java</exclude>
	    <exclude implementation="java.lang.String">**/old/**</exclude>
	    <exclude implementation="java.lang.String">**/sandbox/jcache/TestJCache.java</exclude>
	    <exclude implementation="java.lang.String">**/sandbox/partition/impl/TestExchange.java</exclude>
	    <exclude implementation="java.lang.String">**/TestNodes.java</exclude><!-- hardwired paths -->
	    <exclude implementation="java.lang.String">**/TestJetty.java</exclude><!-- failed for Jeff: investigate -->
	  </excludes>
	</configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <outputDirectory>../../wadi-site/target/site/${artifactId}</outputDirectory>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-clover-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

</project>
