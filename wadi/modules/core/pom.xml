<project>

  <parent>
    <groupId>org.codehaus.wadi</groupId>
    <artifactId>wadi</artifactId>
    <relativePath>../../pom.xml</relativePath>
    <version>2.0M2-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wadi-core</artifactId>
  <packaging>jar</packaging>
  <name>WADI :: Core</name>
  <description>WADI Core functionality</description>

  <scm>
    <connection>scm:svn://svn.wadi.codehaus.org/wadi/scm/trunk/wadi/modules/core</connection>
    <developerConnection>scm:svn+ssh://svn.wadi.codehaus.org/home/projects/wadi/scm/trunk/wadi/modules/core</developerConnection>
    <url>http://svn.wadi.codehaus.org/wadi/modules/core</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging-api</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-j2ee-management</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jms</artifactId>
    </dependency>
    <dependency>
      <groupId>jcache</groupId>
      <artifactId>jcache</artifactId>
    </dependency>
    <dependency>
      <groupId>axion</groupId><!-- used by some tests -->
      <artifactId>axion</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-primitives</groupId><!-- needed by axion -->
      <artifactId>commons-primitives</artifactId>
    </dependency>
    <!-- run time -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-el</groupId>
      <artifactId>commons-el</artifactId>
    </dependency>
    <dependency>
      <groupId>concurrent</groupId>
      <artifactId>concurrent</artifactId>
    </dependency>
    <dependency>
      <groupId>incubator-activemq</groupId>
      <artifactId>activecluster</artifactId>
      <version>${activemq.version}</version>
    </dependency>
    <dependency>
      <groupId>incubator-activemq</groupId>
      <artifactId>activemq</artifactId>
      <version>${activemq.version}</version>
    </dependency>
    <dependency>
      <groupId>backport-util-concurrent</groupId>
      <artifactId>backport-util-concurrent</artifactId>
    </dependency>
    <dependency>
      <groupId>mx4j</groupId>
      <artifactId>mx4j</artifactId>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring</artifactId>
    </dependency>
    <dependency>
      <groupId>regexp</groupId>
      <artifactId>regexp</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
	<configuration>
	  <excludes>

	    <exclude implementation="java.lang.String">**/*$*.java</exclude> <!-- stop surefire from trying to run nested classes -->

	    <exclude implementation="java.lang.String">**/old/test/TestCluster.java</exclude> <!-- seems to overflow end of compilation -->
	    <exclude implementation="java.lang.String">**/sandbox/partition/impl/TestExchange.java</exclude> <!-- Failure -->
	    <exclude implementation="java.lang.String">**/sandbox/jcache/TestJCache.java</exclude> <!-- NullPointerException -->
	    <exclude implementation="java.lang.String">**/test/io/TestMotion.java</exclude> <!-- NullPointerException -->
	    <exclude implementation="java.lang.String">**/test/io/TestServers.java</exclude> <!-- OutOfMemoryError -->
	    <exclude implementation="java.lang.String">**/old/test/TestConcurrency.java</exclude> <!-- Exception -->
	    <exclude implementation="java.lang.String">**/old/test/TestDistributedOwnership.java</exclude> <!-- OutOfMemoryError -->
	    <exclude implementation="java.lang.String">**/old/test/TestUnicastClient.java</exclude> <!-- NoSuchMethodException -->
	    <exclude implementation="java.lang.String">**/old/test/TestMulticastServer.java</exclude> <!-- NoSuchMethodException -->
	    <exclude implementation="java.lang.String">**/test/TestActiveCluster.java</exclude> <!-- causes build to hang -->
	    <exclude implementation="java.lang.String">**/test/TestGianni.java</exclude> <!-- leaves evicter running -->

	  </excludes>
	</configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <outputDirectory>../site/target/site/${artifactId}</outputDirectory>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-clover-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

</project>
