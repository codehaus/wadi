<project>

  <parent>
    <groupId>wadi</groupId>
    <artifactId>wadi</artifactId>
    <relativePath>../../pom.xml</relativePath>
    <version>2.0M2-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wadi-core</artifactId>
  <packaging>jar</packaging>
  <name>WADI :: Core</name>
  <description>WADI Core functionality</description>

  <scm>
    <connection>svn://svn.wadi.codehaus.org/wadi/scm/trunk/wadi/modules/core</connection>
    <developerConnection>svn+ssh://svn.wadi.codehaus.org/home/projects/wadi/scm/trunk/wadi/modules/core</developerConnection>
    <url>http://svn.wadi.codehaus.org/wadi/modules/core</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging-api</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-j2ee-management</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jms</artifactId>
    </dependency>
    <dependency>
      <groupId>jcache</groupId>
      <artifactId>jcache</artifactId>
    </dependency>
    <dependency>
      <groupId>axion</groupId><!-- used by some tests -->
      <artifactId>axion</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-primitives</groupId><!-- needed by axion -->
      <artifactId>commons-primitives</artifactId>
    </dependency>
    <!-- run time -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-el</groupId>
      <artifactId>commons-el</artifactId>
    </dependency>
    <dependency>
      <groupId>concurrent</groupId>
      <artifactId>concurrent</artifactId>
    </dependency>
    <dependency>
      <groupId>activemq</groupId>
      <artifactId>activemq</artifactId>
    </dependency>
    <dependency>
      <groupId>backport-util-concurrent</groupId>
      <artifactId>backport-util-concurrent</artifactId>
    </dependency>
    <dependency>
      <groupId>activecluster</groupId>
      <artifactId>activecluster</artifactId>
    </dependency>
    <dependency>
      <groupId>mx4j</groupId>
      <artifactId>mx4j</artifactId>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring</artifactId>
    </dependency>
    <dependency>
      <groupId>regexp</groupId>
      <artifactId>regexp</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
	<configuration>
	  <excludes>
	    <!-- stop surefire from trying to run nested classes... -->
	    <exclude implementation="java.lang.String">**/*$*.java</exclude>
	    <!-- need tcp broker -->
	    <exclude implementation="java.lang.String">**/TestReplication.java</exclude>
	    <exclude implementation="java.lang.String">**/TestCluster.java</exclude>
	    <!-- very slow and not much use -->
	    <exclude implementation="java.lang.String">**/TestActiveCluster.java</exclude>
	    <!-- broken -->
	    <exclude implementation="java.lang.String">**/io/TestMotion.java</exclude>
	    <!-- old -->
	    <exclude implementation="java.lang.String">**/old/**</exclude>
	    <exclude implementation="java.lang.String">**/sandbox/jcache/TestJCache.java</exclude>
	    <exclude implementation="java.lang.String">**/sandbox/partition/impl/TestExchange.java</exclude>
	  </excludes>
	</configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <outputDirectory>../../wadi-site/target/site/${artifactId}</outputDirectory>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-clover-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

</project>
