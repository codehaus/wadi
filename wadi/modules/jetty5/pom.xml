<project>

  <parent>
    <groupId>wadi</groupId>
    <artifactId>wadi</artifactId>
    <version>2.0M2-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wadi-jetty5</artifactId>
  <packaging>jar</packaging>
  <name>WADI :: Jetty5</name>
  <description>WADI/Jetty-5.x Integration - An HttpSession Manager for Jetty-5.x</description>

  <scm>
    <connection>svn://svn.wadi.codehaus.org/wadi/scm/trunk/wadi/modules/jetty5</connection>
    <developerConnection>svn+ssh://svn.wadi.codehaus.org/home/projects/wadi/scm/trunk/wadi/modules/jetty5</developerConnection>
    <url>http://svn.wadi.codehaus.org/wadi/modules/jetty5</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>wadi</groupId>
      <artifactId>wadi-core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>jetty</groupId>
      <artifactId>org.mortbay.jetty</artifactId>
      <version>${jetty5.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>jetty</groupId>
      <artifactId>org.mortbay.jmx</artifactId>
      <version>${jetty5.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
	<configuration>
	  <excludes>
	    <exclude implementation="java.lang.String">**/*$*.java</exclude><!-- stop surefire from trying to run nested classes... -->
	    <exclude implementation="java.lang.String">**/Test*.java</exclude><!-- tmp -->
	    <exclude implementation="java.lang.String">**/TestRelocation.java</exclude><!-- hardwired paths -->
	  </excludes>
	</configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <outputDirectory>../../wadi-site/target/site/${artifactId}</outputDirectory>
    <plugins>
<!--
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-clover-plugin</artifactId>
      </plugin>
-->
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

</project>
