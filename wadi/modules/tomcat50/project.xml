<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE project>

<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>

  <!-- ===================== -->
  <!-- Module Identification -->
  <!-- ===================== -->

  <name>WADI :: Tomcat50</name>
  <id>wadi-tomcat50</id>
  <description>WADI/Tomcat50 integration</description>
  <shortDescription>WADI/Tomcat50 integration</shortDescription>

  <package>org.codehaus.wadi.tomcat50</package>
  <packageGroups>
    <packageGroup>
      <title>WADI/Tomcat50 integrations</title>
      <packages>org.codehaus.wadi:org.codehaus.wadi.tomcat50</packages>
    </packageGroup>
  </packageGroups>

  <!-- ============ -->
  <!-- Dependencies -->
  <!-- ============ -->

  <dependencies>

    <!-- compile time -->

    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>catalina</artifactId>
      <version>5.0.18</version><!-- when will this be updated? -->
      <url>http://jakarta.apache.org/tomcat/tomcat-5.0-doc</url>
      <javadoc>http://jakarta.apache.org/tomcat/tomcat-5.0-doc/catalina/docs/api</javadoc>
    </dependency>

    <dependency>
      <groupId>wadi</groupId>
      <artifactId>wadi-core</artifactId>
      <version>2.0-SNAPSHOT</version>
      <url>http://wadi.codehaus.org</url>
    </dependency>

    <!-- run time -->

  </dependencies>

  <build>
    <unitTestSourceDirectory></unitTestSourceDirectory>
    <defaultGoal>jar</defaultGoal>
  </build>

</project>
