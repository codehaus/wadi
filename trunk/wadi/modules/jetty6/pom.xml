<project>

  <parent>
    <groupId>wadi</groupId>
    <artifactId>wadi</artifactId>
    <version>2.0M2-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wadi-jetty6</artifactId>
  <packaging>jar</packaging>
  <name>WADI :: Jetty6</name>
  <description>WADI/Jetty-6.x Integration - An HttpSession Manager for Jetty-6.x</description>

  <scm>
    <connection>scm:cvs:pserver:anoncvs@cvs.wadi.codehaus.org:/home/projects/wadi/scm:wadi/modules/jetty6</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.wadi.codehaus.org/home/projects/wadi/scm:wadi/modules/jetty6</developerConnection>
    <url>http://cvs.wadi.codehaus.org/viewrep/wadi/wadi/modules/jetty6</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>wadi</groupId>
      <artifactId>wadi-core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty</artifactId>
      <version>${jetty6.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>jetty6-releases</id>
      <name>Mortbay Repository at the Codehaus</name>
      <url>http://www.mortbay.org/maven2/release</url>
    </repository>
    <repository>
      <id>jetty6-snapshots</id>
      <name>Mortbay Repository at the Codehaus</name>
      <url>http://www.mortbay.org/maven2/snapshot</url>
    </repository>
  </repositories>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>src/test</testSourceDirectory>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <outputDirectory>../../wadi-site/target/site/${artifactId}</outputDirectory>
    <plugins>
<!--
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-clover-plugin</artifactId>
      </plugin>
-->
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

</project>
