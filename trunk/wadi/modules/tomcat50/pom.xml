<project>

  <parent>
    <groupId>wadi</groupId>
    <artifactId>wadi</artifactId>
    <version>2.0M2-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wadi-tomcat50</artifactId>
  <packaging>jar</packaging>
  <name>WADI :: Tomcat50</name>
  <description>WADI/Tomcat-5.0.x Integration - An HttpSession Manager for Tomcat-5.0.x</description>

  <scm>
    <connection>scm:svn://svn.wadi.codehaus.org/wadi/scm/trunk/wadi/modules/tomcat50</connection>
    <developerConnection>scm:svn+ssh://svn.wadi.codehaus.org/home/projects/wadi/scm/trunk/wadi/modules/tomcat50</developerConnection>
    <url>http://svn.wadi.codehaus.org/wadi/modules/tomcat50</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>wadi</groupId>
      <artifactId>wadi-core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>catalina</artifactId>
      <version>${tomcat50.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <outputDirectory>../../wadi-site/target/site/${artifactId}</outputDirectory>
    <plugins>
<!--
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-clover-plugin</artifactId>
      </plugin>
-->
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

</project>
