<project>

  <parent>
    <groupId>org.codehaus.wadi</groupId>
    <artifactId>wadi</artifactId>
    <relativePath>./pom.xml</relativePath>
    <version>2.0M2-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wadi-clover</artifactId>
  <packaging>pom</packaging>
  <name>WADI :: Clover</name>

  <pluginRepositories>
    <pluginRepository>
      <id>wadi-dependencies</id>
      <name>WADI Dependencies Repository at the Haus</name>
      <url>http://dist.codehaus.org/wadi/dependencies/maven2</url><!-- TODO: should be moved over to WadiReleaseRepository -->
  </pluginRepository>
  </pluginRepositories>

  <modules>
    <module>modules/dispatcher</module>
    <module>modules/core</module>
    <module>modules/activecluster</module>
    <module>modules/jgroups</module>
    <module>modules/tribes</module>
    <module>modules/jetty5</module>
    <module>modules/jetty6</module>
    <module>modules/tomcat50</module>
    <module>modules/tomcat55</module>
    <module>modules/axis2</module>
    <module>modules/openejb</module>
    <module>modules/jboss4</module>
    <module>modules/webapp</module>
    <module>modules/assembly</module>
  </modules>

  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-clover-plugin</artifactId>
	<version>2.1-SNAPSHOT</version>
	<configuration>
	  <jdk>${jse.version}</jdk>
	  <licenseLocation>./etc/clover.license</licenseLocation>
	</configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
	<artifactId>maven-clover-plugin</artifactId>
	<version>2.1-SNAPSHOT</version>
      </plugin>
    </plugins>
  </reporting>

</project>
